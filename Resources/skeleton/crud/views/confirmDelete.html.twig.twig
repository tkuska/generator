{% block body %}
{{'{% block page_head %}'}}{{ entity }} delete{{'{%endblock %}'}}
{{ "{% block body -%}" }}
<div class="panel panel-default">
        <div class="panel-heading">{{ entity }} delete</div>
        {{'{{form_start(form)}}'}}
        <div class="panel-body">
            Czy na pewno chcesz usunąć {{ entity }} z systemu?
            {{ '{{ form_widget(form) }}' }}
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <a href="javascript: history.go(-1)" class="btn btn-default"><i class="glyphicon glyphicon-backward"></i> Anuluj</a>
                <button type="submit" class="btn btn-danger">
                    <i class="glyphicon glyphicon-remove"></i> Usuń</button>
            </div>
        </div>
        {{'{{form_end(form)}}'}}
</div>
{{ "{% endblock %}" }}
{% endblock body %}
